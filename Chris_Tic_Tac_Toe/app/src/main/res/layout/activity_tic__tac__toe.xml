<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Tic_Tac_Toe"
    android:background="#ff000000">


    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/top_left"
        android:background="#ff000000"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/left_vertical_line"
        android:layout_alignEnd="@+id/left_vertical_line" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/top_middle"
        android:background="#ff000000"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/middle" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/top_right"
        android:layout_above="@+id/top_horizontal_line"
        android:layout_alignLeft="@+id/right_vertical_line"
        android:layout_alignStart="@+id/right_vertical_line"
        android:background="#ff000000" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/top_horizontal_line"
        android:src="@drawable/horizontal_line"
        android:layout_below="@+id/top_left"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_horizontal_line"
        android:src="@drawable/horizontal_line"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="150dp" />



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/left_vertical_line"
        android:src="@drawable/vertical_line"
        android:layout_marginLeft="117dp"
        android:layout_marginStart="117dp"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="150dp" />



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/right_vertical_line"
        android:src="@drawable/vertical_line"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/top_horizontal_line"
        android:layout_alignEnd="@+id/top_horizontal_line"
        android:layout_marginRight="110dp"
        android:layout_marginEnd="110dp"
        android:scaleType="fitXY"
        android:layout_marginBottom="150dp"
        android:background="#ff000000" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/bottom_left"
        android:background="#ff000000"
        android:layout_alignTop="@+id/bottom_middle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/bottom_middle"
        android:layout_alignRight="@+id/middle_left"
        android:layout_alignEnd="@+id/middle_left" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/bottom_middle"
        android:background="#ff000000"
        android:layout_alignBottom="@+id/left_vertical_line"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@+id/left_vertical_line"
        android:layout_toLeftOf="@+id/right_vertical_line" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/bottom_right"
        android:background="#ff000000"
        android:layout_alignTop="@+id/bottom_middle"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/middle_left"
        android:background="#ff000000"
        android:paddingTop="50dp"
        android:layout_below="@+id/top_horizontal_line"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingBottom="50dp"
        android:paddingLeft="5dp" />

    <ImageButton
        android:layout_width="85dp"
        android:layout_height="100dp"
        android:id="@+id/middle"
        android:background="#ff000000"
        android:layout_alignTop="@+id/middle_left"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/middle_right"
        android:background="#ff000000"
        android:layout_alignTop="@+id/middle"
        android:layout_alignLeft="@+id/bottom_right"
        android:layout_alignStart="@+id/bottom_right" />


</RelativeLayout>
